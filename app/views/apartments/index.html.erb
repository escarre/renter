
	<div class="page-header">
		<h1>all your apartments</h1>
	</div>

	<div id="container">
	<ul class ="apartments">
		<% if @apartments.size <= 0 %>
			<h4> No apartments found. <%= link_to 'Create one now!', new_apartment_path %> </h4>
		<% else %>
		    <% @apartments.each do |apartment| %>
					<li><%= link_to image_tag("apt_icon.png"), apartment %>
						<h3><%= apartment.name %></h3>
						<h5> <%= apartment.address %> </h5>
						<h5><%= apartment.city %>, <%= apartment.state %> <%= apartment.zip %></h5>
						<p><%= apartment.description %></p>
					</li>
				<% end %>
		<% end %>
		<%= will_paginate @apartments %>
	</div>
	<br>
	<br>


