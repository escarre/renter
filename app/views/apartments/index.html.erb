<div class="container">
	<div class="page-header">
		<h1>Your Apartments</h1>
	</div>

	<div id="container">
	<ul class ="apartments">
		<% if @apartments.size <= 0 %>
			<h1> No apartments found. <%= link_to 'Create one now!', new_apartment_path %> </h1>
		<% else %>
		    <% @apartments.each do |apartment| %>
					<li><%= link_to 'Show', apartment %><img class="img-circle" src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw==" alt="Generic placeholder image" style="width: 140px; height: 140px;">
						<h3><%= apartment.name %></h3>
						<h5> <%= apartment.address %> </h5>
						<p><%= apartment.description %></p>
		        <td><%= link_to 'Show', apartment %></td>
		        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
		        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</li>
				<% end %>
		<% end %>
	</div>
	<br>
	<br>
	<h3><%= link_to 'New Apartment', new_apartment_path %></h3>
</div>
